@model Agreement_Management.DTOs.AgreementDTO

@{
    ViewData["Title"] = "GetNewAgreement";
}

<h1>GetNewAgreement</h1>

<h4>Agreement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NewAgreement" >

            <div class="pb-3">
                <label>Group</label>
                  <select asp-for="Group" name="Group" id="Group">
                    <option disabled value="" selected>Select Sector</option>
                    <option value="Vovo">Vovo</option>
                    <option value="Benze">Benze</option>
                  
                </select>
            </div>


            
            <div class="form-group">
                <label asp-for="Product" class="control-label"></label>
                <select name="cars" id="cars">
                    <option disabled value="" selected>Select Sector</option>
                    <option value="Vovo">Vovo</option>
                    <option value="xtera">Xtera</option>
                 
                </select>
            </div>
            <div class="form-group">
                <label asp-for="EffectiveDate" class="control-label"></label>
                <input asp-for="EffectiveDate" class="form-control" />
                <span asp-validation-for="EffectiveDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpirationDate" class="control-label"></label>
                <input asp-for="ExpirationDate" class="form-control" />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product_Price" class="control-label"></label>
                <input asp-for="Product_Price" class="form-control" />
                <span asp-validation-for="Product_Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="New_Price" class="control-label"></label>
                <input asp-for="New_Price" class="form-control" />
                <span asp-validation-for="New_Price" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)

                    @*<input class="form-check-input" id="contract-check" type="checkbox" name="Active" asp-for="Active" class="form-check-input" value="true">*@
                </label>
            </div>
           

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

